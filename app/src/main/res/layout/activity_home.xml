                            android:layout_height="match_parent" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:background="@drawable/home_icon"
                            android:text="Math"
                            android:textColor="#ffff"/>/>

                        <Space
