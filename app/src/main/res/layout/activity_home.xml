                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="130dp"
                                app:cardCornerRadius="7dp"
                                app:cardBackgroundColor="@color/transparent">
                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="130dp"
