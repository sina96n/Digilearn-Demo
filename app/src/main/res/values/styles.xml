<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextColor">#A3A4A9</item>
        <item name="android:textColorHint">#A3A4A9</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:statusBarColor">#11121B</item>
        <item name="android:navigationBarColor">#1a1c29</item>
    </style>

    <style name="SearchViewMy" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@color/searchview</item>
        <item name="android:textSize">10sp</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:searchIcon">@null</item>
        <item name="queryBackground">@color/searchview</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/menu_item</item>
    </style>

    <style name="full_screen" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/searchview</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/searchview</item>
        <item name="android:editTextColor">#A3A4A9</item>
        <item name="android:textColorHint">#A3A4A9</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:navigationBarColor">#1a1c29</item>
    </style>

    <style name="PDF" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:statusBarColor">#1a1c29</item>
        <item name="android:navigationBarColor">#1a1c29</item>
    </style>

    <style name="bar_included" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:statusBarColor">#11121B</item>
        <item name="android:navigationBarColor">#1a1c29</item>
    </style>

    <style name="calculator" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:statusBarColor">#11121B</item>
        <item name="android:navigationBarColor">#11121B</item>
    </style>


</resources>
